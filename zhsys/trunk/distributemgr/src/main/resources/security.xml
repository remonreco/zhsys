<?xml version="1.0" encoding="UTF-8"?>

<beans xmlns="http://www.springframework.org/schema/beans"
  xmlns:security="http://www.springframework.org/schema/security"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xmlns:context="http://www.springframework.org/schema/context"
  xsi:schemaLocation="http://www.springframework.org/schema/beans
          http://www.springframework.org/schema/beans/spring-beans-4.1.xsd
          http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context-4.1.xsd
          http://www.springframework.org/schema/security
          http://www.springframework.org/schema/security/spring-security.xsd">
   <import resource="classpath*:service.xml"/>
	<!-- 启动debug模式，正式发布项目时需要关闭 -->
<!--     <security:debug /> -->

<!--     <security:global-method-security pre-post-annotations="enabled" /> -->
    <!-- 设置方法访问权限 -->
    <security:global-method-security>
        <!-- 操作员管理 -->
        <security:protect-pointcut access="ROLE_OPERATOR_MANAGE"
            expression="execution(* *.SysUserController.toSysUsers(..))
                || execution(* *.SysUserController.querySysUsers(..))
                || execution(* *.SysUserController.addSysUser(..))
                || execution(* *.SysUserController.allSysBusiRoles(..))
                || execution(* *.SysUserController.updateSysUser(..))
                || execution(* *.SysUserController.checkDuplicateSysUserLoginName(..))"
        />

        <!-- 角色管理 -->
        <security:protect-pointcut access="ROLE_BUSI_ROLE_MANAGE" expression="execution(* com.cbice.distribute.mgr.web.controller.SysBusiRoleController.toSysBusiRoles(..))" />
        
        <!-- 功能管理 -->
        <security:protect-pointcut access="ROLE_ROLE_MANAGE"
            expression="execution(* com.cbice.distribute.mgr.web.controller.SysRoleController.toSysRoles(..))
                || execution(* com.cbice.distribute.mgr.web.controller.SysRoleController.querySysRoles(..))"
        />
        
        <!-- 经销商角色管理 -->
        <security:protect-pointcut access="ROLE_AGENCY_ROLE"
            expression="execution(* *.AgencyBusiRoleController.toAgencyRoles(..))
                || execution(* *.AgencyBusiRoleController.queryAgencyBusiRoles(..))
                || execution(* *.AgencyBusiRoleController.addAgencyBusiRole(..))
                || execution(* *.AgencyBusiRoleController.checkDuplicateAgencyBusiRoleName(..))
                || execution(* *.AgencyBusiRoleController.updateAgencyBusiRole(..))
                || execution(* *.AgencyBusiRoleController.delAgencyRole(..))
                || execution(* *.AgencyRoleController.toAgencyRoles(..))
                || execution(* *.AgencyRoleController.queryAgencyRoles(..))
                || execution(* *.AgencyRoleController.allAgencyRoles(..))
                "
        />
    </security:global-method-security>
   

    <security:http pattern="/css/**" security="none"/>
    <security:http pattern="/js/**" security="none"/>
    <security:http pattern="/login.jsp" security="none"/>
    <security:http pattern="/queryCommodityI.html" security="none"/>
    <security:http pattern="/addCommodityGoodsI.html" security="none"/>
    <security:http pattern="/updateCommodityI.html" security="none"/>
    <security:http pattern="/updateCommodityGoodsI.html" security="none"/>
    <security:http pattern="/exchangeRuleQueryI.html" security="none"/>
    <security:http pattern="/addCommodityRulesI.html" security="none"/>
    <security:http pattern="/updateCommodityRuleI.html" security="none"/>
    <security:http pattern="/deleteRuleI.html" security="none"/>
    <security:http pattern="/doCommodityApprovalI.html" security="none"/>
    <security:http pattern="/queryCommodityApprovalI.html" security="none"/>
    <security:http pattern="/downLoadApprovalSuccessI.html" security="none"/>
    <security:http pattern="/doTransactionRecordApprovalI.html" security="none"/>

    <security:http use-expressions="true" auto-config="true" >
        <security:csrf disabled="true" />
        <security:headers>
            <security:frame-options policy="SAMEORIGIN"/>
        </security:headers>
        <security:intercept-url pattern="/**" access="isAuthenticated()" />
        <security:form-login login-page="/login.jsp" default-target-url="/main.html" login-processing-url="/login.html" always-use-default-target="true" username-parameter="username" password-parameter="password"/>
        <security:logout logout-success-url="/login.jsp" logout-url="/logout.html" delete-cookies="JSESSIONID"/>
        <security:remember-me />
        <!-- 自定义过滤器 -->
        <!-- <security:custom-filter before="FILTER_SECURITY_INTERCEPTOR" ref="sessionOut" /> -->
    </security:http>

    <security:authentication-manager>
        <security:authentication-provider ref="authenticationProvider"/>
    </security:authentication-manager>
    
    <bean id="authenticationProvider" class="org.springframework.security.authentication.dao.DaoAuthenticationProvider">
    	<property name="userDetailsService" ref="userDetailsService"></property>
    	<property name="passwordEncoder" ref="passwordEncoders"></property>
		<!-- 消除 Bad credentials异常信息 -->
		<!-- <property name="hideUserNotFoundExceptions" value="false" /> -->
    </bean>
    
    <bean id="passwordEncoders" class="org.springframework.security.authentication.encoding.MessageDigestPasswordEncoder">
        <constructor-arg value="MD5"/>
    </bean>
	
	<bean id="userDetailsService" class="com.cbice.distribute.mgr.security.service.impl.UserDetailsServiceImpl">
		<property name="sysUserService" ref="sysUserService"/>
		<property name="sysRoleService" ref="sysRoleService"/>
	</bean>
	
	<!-- 自定义过滤器 -->
	<!-- <bean id="sessionOutInterceptor" class="com.buybal.web.interceptor.SessionInterceptor" /> -->

<bean id="multipartResolver" class="org.springframework.web.multipart.commons.CommonsMultipartResolver">  
    <property name="maxUploadSize" value="10485760" />  
</bean>
</beans>
